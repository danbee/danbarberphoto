<%= error_messages_for :photo %>

<% form_for(:photo, :url => :photos, :html => { :multipart => true }) do |f| -%>

    <p>
        <%= f.label :image_file %>:<br />
        <%= f.file_field :photo %>
    </p>
    <p>
        <%= f.label :category %>
        <%= f.select :category_id, @categories %>
    </p>
    <p>
        <%= submit_tag 'Upload' %>
    </p>

<% end -%>
